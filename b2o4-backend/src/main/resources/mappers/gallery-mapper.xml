<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="b2o4.mapper.GalleryMapper">

	<!-- 게시판 업로드 -->
	<insert id="GalleryUpload" parameterType="GalleryBoard" useGeneratedKeys="true" keyProperty="GBPostNo">
		insert into galleryBoard(GBPostTitle, GBPostContent, GBPostImages)
		values(#{GBPostTitle}, #{GBPostContent}, #{GBPostImages})
	</insert>
	
	<!-- 게시판 보기 -->
	<select id="AllGalleryBoard">
		select * from galleryBoard
	</select>
	
</mapper>