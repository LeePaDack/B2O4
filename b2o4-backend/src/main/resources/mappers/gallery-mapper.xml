<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="b2o4.mapper.GalleryMapper">

	<!-- 게시판 업로드 -->
	<insert id="GalleryUpload" parameterType="b2o4.dto.GalleryBoard" useGeneratedKeys="true" keyProperty="gbPostNo">
        INSERT INTO GalleryBoard (GBPostTitle, GBPostContent, GBImages)
        VALUES (#{gbPostTitle}, #{gbPostContent}, #{gbImages})
    </insert>
	
	<!-- 게시판 목록 보기 -->
	<select id="AllGalleryBoard" resultType='b2o4.dto.GalleryBoard'>
		select * from galleryBoard
	</select>

	<!-- 게시판 상세보기 -->
	<select id="GalleryDetail" resultType="b2o4.dto.GalleryBoard" parameterType="int">
		SELECT * FROM galleryBoard
		WHERE GBPostNO = #{gbPostNo}
	</select>
	
</mapper>